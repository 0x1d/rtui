{
  "name": "rtui",
  "version": "1.0.0",
  "description": "rTorrent web interface",
  "main": "app.js",
  "devDependencies": {
      "catw": "latest",
      "browserify": "latest",
      "watch": "latest",
      "nodemon": "latest"
    },
    "scripts": {
      "build:js": "browserify src/website/scripts/main.js > dist/website/main.js",
      "watch:js": "nodemon -q -w src/website/scripts --ext \".\" --exec \"npm run build:js\"",
      "build:css": "lessc src/website/styles/main.less dist/website/main.css",
      "watch:css": "nodemon -q -w src/website/styles --ext \".\" --exec \"npm run build:css\"",
      "build": "npm run build:js && npm run build:css",
      "watch": "npm run watch:js && npm run watch:css",
      "app:dev": "nodemon --watch src/app src/app/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0x1d/rtui.git"
  },
  "author": "Patrick Balsiger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/0x1d/rtui/issues"
  },
  "homepage": "https://github.com/0x1d/rtui#readme",
  "dependencies": {
    "node-rtorrent": "^1.1.0",
    "slimple": "^0.6.5"
  }
}
